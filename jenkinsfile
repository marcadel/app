pipeline {
    agent {
        kubernetes {
            yaml """
kind: Pod
metadata:
  name: kaniko-kubectl
  namespace: jenkins
spec:
  serviceAccountName: jenkins
  containers:
  - name: kubectl
    image: abanobmorkos10/aws-kubectl
    command:
      - "/bin/bash"
      - "-c"
      - "sleep 99d"
    tty: true
"""
        }
    }
    stages {
        stage('Check DNS') {
            steps {
                container('kubectl') {
                    script {
                        try {
                            sh 'nslookup kubernetes.default.svc'
                        } catch (Exception e) {
                            echo "Error: ${e}"
                            currentBuild.result = 'FAILURE'
                            throw e
                        }
                    }
                }
            }
        }
        stage('Check Kubernetes API') {
            steps {
                container('kubectl') {
                    script {
                        try {
                            sh 'curl -k https://kubernetes.default.svc'
                        } catch (Exception e) {
                            echo "Error: ${e}"
                            currentBuild.result = 'FAILURE'
                            throw e
                        }
                    }
                }
            }
        }
        stage('Test kubectl Command') {
            steps {
                container('kubectl') {
                    script {
                        try {
                            sh 'kubectl get pods --all-namespaces'
                        } catch (Exception e) {
                            echo "Error: ${e}"
                            currentBuild.result = 'FAILURE'
                            throw e
                        }
                    }
                }
            }
        }
        stage('Deploy to EKS') {
            steps {
                container('kubectl') {
                    script {
                        try {
                            sh 'kubectl version'
                        } catch (Exception e) {
                            echo "Error: ${e}"
                            currentBuild.result = 'FAILURE'
                            throw e
                        }
                    }
                }
            }
        }
    }
    post {
        failure {
            echo 'Deployment failed!'
        }
    }
}
