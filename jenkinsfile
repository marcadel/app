pipeline {
    agent {
        kubernetes {
            yaml """
kind: Pod
metadata:
  name: kaniko-kubectl
  namespace: jenkins
spec:
  serviceAccountName: jenkins
  containers:
  - name: kubectl
    image: abanobmorkos10/aws-kubectl
    command:
      - "/bin/bash"
      - "-c"
      - "sleep 99d"
    tty: true
"""
        }
    }
    stages {
        stage('deploy to eks') {
            steps {
                container('kubectl') {
                        script {
                            sh 'kubectl version'
                        }
                    
                }
            }
        }
    }
}