pipeline {
    agent {
        kubernetes {
            yaml """
kind: Pod
metadata:
  name: kaniko-kubectl
  namespace: jenkins
spec:
  serviceAccountName: jenkins
  containers:
  - name: kubectl
    image: abanobmorkos10/aws-kubectl
    command:
      - "/bin/bash"
      - "-c"
      - "sleep 99d"
    tty: true

  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command:
    - cat
    tty: true
    volumeMounts:
      - name: kaniko-secret
        mountPath: /kaniko/.docker/
  volumes:
    - name: kaniko-secret
      secret:
        secretName: kaniko-secret
"""
        }
    }
    stages {
        stage('Build-Docker-Image') {
            steps {
                container('kaniko') {
                    script {
                        sh '/kaniko/executor --dockerfile app/Dockerfile --context app --destination abanoubmorkos10/khaled_app:${BUILD_NUMBER}'
                    }
                }
            }
        }
        stage('deploy to eks') {
            steps {
                container('kubectl') {
                        script {
                            sh 'kubectl version'
                        }
                    
                }
            }
        }
    }
}